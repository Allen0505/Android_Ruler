<?xml version="1.0" encoding="utf-8"?>
<resources>
        <declare-styleable name="RulerView">
            <!--最大刻度-->
            <attr name="max_value" format="integer" />
            <!--最小刻度-->
            <attr name="min_value" format="integer" />
            <!--长刻度长度-->
            <attr name="heightline_length" format="dimension" />
            <!--短刻度长度-->
            <attr name="shortline_length" format="dimension" />
            <!--长刻度颜色-->
            <attr name="heightline_color" format="color" />
            <!--短刻度颜色-->
            <attr name="shortline_color" format="color" />
            <!--刻度字体大小-->
            <attr name="scale_text_size" format="dimension" />
            <!--刻度字体颜色-->
            <attr name="scale_text_color" format="color" />
            <!--颜色背景-->
            <attr name="background_color" format="color" />
            <!--标记颜色-->
            <attr name="tag_color" format="color" />
            <!--标尺开始显示位置-->
            <attr name="start_location" format="integer" />
            <!--一个刻度的大小-->
            <attr name="one_item_value" format="integer" />
        </declare-styleable>
</resources>